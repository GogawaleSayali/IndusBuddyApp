<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/image3x"
        android:layout_marginRight="@dimen/image3x"
        android:layout_marginTop="@dimen/image3x"
        android:background="@drawable/square_round"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image3x"
            android:elevation="@dimen/image3x"
            app:cardCornerRadius="@dimen/image3x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image4x"
                    android:text="One Time"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_overlay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.9"
                        android:gravity="end"
                        android:text="Reminder Date &#38; Time"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <TextView
                        android:id="@+id/tvReminderDateTimeIOneTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/square_white"
                        android:padding="@dimen/image3x"
                        android:textAllCaps="true"
                        android:textSize="@dimen/font3x" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.9"
                        android:gravity="end"
                        android:text="Scheduled On"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etOneTimeNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/square_white"
                            android:padding="@dimen/image3x"
                            android:textSize="@dimen/font3x" />

                        <Spinner
                            android:id="@+id/spinnerSchedule"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/image2x"
                            android:layout_marginRight="@dimen/image2x"
                            android:layout_weight="1"
                            android:background="@drawable/square_white"
                            android:gravity="center"
                            android:text="Hours"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />

                        <TextView
                            android:id="@+id/tvAddOnTimeSchedule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/image3x"
                            android:layout_marginRight="@dimen/image3x"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_button_green"
                            android:gravity="center"
                            android:padding="@dimen/image3x"
                            android:text="Add"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font3x" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.9"
                        android:gravity="end"
                        android:text="Summary"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/square_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:padding="@dimen/image3x"
                            android:text="#"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:background="@color/colorWhite"
                            android:padding="@dimen/image3x"
                            android:text="Reminder Date &#38; time "
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/image2x"
                            android:layout_marginRight="@dimen/image2x"
                            android:layout_weight="0.8"
                            android:background="@drawable/ripple_button_orange"
                            android:gravity="center"
                            android:padding="@dimen/image3x"
                            android:text="Delete"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font3x" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_overlay" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:id="@+id/tvCancelOneTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/image3x"
                        android:layout_toLeftOf="@+id/tvDone"
                        android:background="@drawable/ripple_button_maroon"
                        android:paddingBottom="@dimen/image3x"
                        android:paddingLeft="@dimen/image7x"
                        android:paddingRight="@dimen/image7x"
                        android:paddingTop="@dimen/image3x"
                        android:text="@string/Camera_Cancel"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font3x" />

                    <TextView
                        android:id="@+id/tvDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/image3x"
                        android:background="@drawable/ripple_button_blue"
                        android:paddingBottom="@dimen/image3x"
                        android:paddingLeft="@dimen/image7x"
                        android:paddingRight="@dimen/image7x"
                        android:paddingTop="@dimen/image3x"
                        android:text="Done"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font3x" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image5x"
            android:alpha="0.6"
            android:background="@color/colorText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/image3x"
            android:text="Summary"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/font3x"
            android:background="@drawable/square_semi_brown"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@color/colorText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center"
                android:padding="@dimen/image4x"
                android:text="#"
                android:textStyle="bold"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="@dimen/image4x"
                android:textStyle="bold"
                android:text="Reminder date &#38; time"
                android:textColor="@color/colorText" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/image4x"
                android:text="Delete"
                android:textStyle="bold"
                android:textColor="@color/colorText" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="1"
            android:background="@color/colorText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvScheduleOneTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>