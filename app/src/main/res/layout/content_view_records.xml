<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhitegrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.activities.storerecord.ViewRecordsActivity"
    tools:showIn="@layout/activity_view_records">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvViewTypes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tvDataNotFound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No addon record available!!"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/font3x"
        android:visibility="gone"
        android:alpha="0.7"/>
</android.support.constraint.ConstraintLayout>