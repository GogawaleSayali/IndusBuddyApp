<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dogratech.indusbuddyapp.main.activities.navmenuactivities.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">
    <!--tools:showIn="@layout/activity_user_profile"-->
    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivnormal"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/ivBlurImage"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:scaleType="centerCrop" />
                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#80000000"/>-->
                <LinearLayout
                    android:id="@+id/llCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.jackandphantom.circularimageview.CircleImage
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        app:border_width="1.5dp"
                        app:border_color="@color/colorOrange"
                        app:add_shadow="true"
                        android:layout_marginTop="@dimen/image10x"
                        app:shadow_color="@color/colorBlack"
                        app:shadow_radius="10"
                        android:id="@+id/circleImage" />

                    <TextView
                        android:id="@+id/tvProfUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/image2x"
                        android:gravity="center"
                        android:text="Amol Ranpise"
                        android:textColor="@color/colorWhite"
                        android:shadowColor="@color/black_overlay"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="10"
                        android:textSize="@dimen/font7x" />

                    <View
                        android:layout_width="130dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/image2x"
                        android:background="@color/colorPrimaryDark" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/ivChangeImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="?actionBarSize"
                    android:layout_marginRight="@dimen/image4x"
                    android:layout_marginBottom="@dimen/image4x"
                    android:layout_marginLeft="@dimen/image4x"
                    android:scaleType="fitXY"
                    android:background="@drawable/circle_grey"
                    android:src="@drawable/edit"
                    android:padding="@dimen/image5x"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font6x" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardIVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/image2x"
        android:layout_marginLeft="@dimen/image7x"
        android:layout_marginRight="@dimen/image7x"
        android:layout_marginTop="230dp"
        android:background="@color/colorWhite"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/image4x"
                    android:text="@string/redeemPoint"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font5x"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/viewLine"
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/image4x"
                    android:layout_marginTop="@dimen/image4x"
                    android:background="@color/black_overlay" />

                <TextView
                    android:id="@+id/tvIVPs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/image2x"
                    android:text="-"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font6x"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardIVP"
        android:layout_marginLeft="@dimen/image7x"
        android:layout_marginRight="@dimen/image7x"
        android:background="@color/colorWhite"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image4x"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGenderIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_gender_icon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font6x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:padding="@dimen/image4x"
                    android:text="Gender"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:padding="@dimen/image2x"
                    android:text="-"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image4x"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDobIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_calendar_icon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font6x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:padding="@dimen/image4x"
                    android:text="Date of birth"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvDOB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:padding="@dimen/image2x"
                    android:text="-"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image4x"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMobileIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_mobile_icon"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font6x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:padding="@dimen/image4x"
                    android:text="Mobile"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:padding="@dimen/image2x"
                    android:text="-"

                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image4x"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEmailIcon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font6x" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.8"
                    android:padding="@dimen/image4x"
                    android:text="Email"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:padding="@dimen/image2x"
                    android:text="-"
                    android:autoLink="email"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
