<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".main.activities.storerecord.UploadMenuActivity"
    tools:showIn="@layout/activity_upload_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llOptions"
            android:layout_margin="@dimen/image3x"
            android:background="@drawable/dashed_square">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/image30x"
                android:background="@drawable/square_white"
                android:visibility="gone"
                android:src="@drawable/pdf"/>
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="file name"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:alpha="0.7"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/image5x"
                android:padding="@dimen/image3x"
                android:textSize="@dimen/font4x"/>
            <TextView
                android:id="@+id/tvClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="@dimen/font5x"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image30x"
                android:layout_marginTop="@dimen/image30x"
                android:background="@drawable/square_semi_brown"
                android:padding="@dimen/image8x"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llButtons"
            android:layout_marginTop="@dimen/image3x"
            android:orientation="horizontal"
            android:padding="@dimen/image3x">

            <LinearLayout
                android:id="@+id/llCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/image2x"
                    android:gravity="center"
                    android:padding="@dimen/image5x"
                    android:text="Photo"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_file" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/image2x"
                    android:gravity="center"
                    android:padding="@dimen/image5x"
                    android:text="File"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_gallery" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/image2x"
                    android:gravity="center"
                    android:padding="@dimen/image5x"
                    android:text="Gallery"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="@dimen/image3x">

            <TextView
                android:id="@+id/tvBackBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/image2x"
                android:layout_weight="1"
                android:background="@drawable/ripple_button_blue"
                android:gravity="center"
                android:padding="@dimen/image5x"
                android:text="BACK"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tvNextBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image2x"
                android:layout_weight="1"
                android:background="@drawable/ripple_button_blue"
                android:gravity="center"
                android:padding="@dimen/image5x"
                android:text="NEXT"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>