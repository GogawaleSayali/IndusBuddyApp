<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/image3x"
        android:layout_marginRight="@dimen/image3x"
        android:layout_marginTop="@dimen/image3x"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image3x"
            android:elevation="@dimen/image3x"
            app:cardCornerRadius="@dimen/image3x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image4x"
                    android:text="Repeat"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_overlay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Repeats"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <Spinner
                        android:id="@+id/spinnerRepeats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/square_white"
                        android:textAllCaps="true"
                        android:textSize="@dimen/font3x" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Repeat every"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnerRepeatEvery"
                            android:layout_width="0dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/square_white"
                            android:inputType="number"
                            android:textSize="@dimen/font3x" />

                        <TextView
                            android:id="@+id/tvRepeatEvery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/image3x"
                            android:layout_marginRight="@dimen/image3x"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/image3x"
                            android:text="weeks"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llRepeatWeeklyOn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Repeat On"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbSunday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="SUNDAY"
                                android:layout_height="wrap_content"
                                android:text="S"/>
                            <CheckBox
                                android:id="@+id/cbMonday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="MONDAY"
                                android:layout_height="wrap_content"
                                android:text="M"/>
                            <CheckBox
                                android:id="@+id/cbTuesday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="TUESDAY"
                                android:layout_height="wrap_content"
                                android:text="T"/>
                            <CheckBox
                                android:id="@+id/cbWedensday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="WEDNESDAY"
                                android:layout_height="wrap_content"
                                android:text="W"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbThirsday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="THURSDAY"
                                android:layout_height="wrap_content"
                                android:text="T"/>
                            <CheckBox
                                android:id="@+id/cbFriday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="FRIDAY"
                                android:layout_height="wrap_content"
                                android:text="F"/>
                            <CheckBox
                                android:id="@+id/cbSaturday"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:tag="SATURDAY"
                                android:layout_height="wrap_content"
                                android:text="S"/>
                            <CheckBox
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:visibility="invisible"
                                android:layout_height="wrap_content"
                                android:text="W"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llMonthlyRepeatBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Repeat by"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/rgMonthlyRepeatBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/rbDayOfMonth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="day of the month"/>
                            <RadioButton
                                android:id="@+id/rbDayOfWeek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="day of the week"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Starts On"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRepeatsOn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/image3x"
                            android:layout_marginRight="@dimen/image3x"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="@dimen/image3x"
                            android:text="date"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.6"
                        android:gravity="end"
                        android:text="Ends"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:id="@+id/rgEnds"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <RadioButton
                                android:id="@+id/radioRepeatNever"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Never"
                                android:layout_margin="@dimen/image2x"/>
                            <RadioButton
                                android:id="@+id/radioRepeatAfter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="After"
                                android:layout_margin="@dimen/image2x"/>
                            <RadioButton
                                android:id="@+id/radioRepeatOn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="On"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/image2x"/>
                        </RadioGroup>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="invisible"
                                android:layout_margin="@dimen/image3x"
                                android:padding="@dimen/image3x"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/etOccurancesNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="number"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/square_white"
                                    android:padding="@dimen/image3x"
                                    android:textSize="@dimen/font3x" />
                                <TextView
                                    android:id="@+id/tvOccurancesNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/image3x"
                                    android:text="Occurances"
                                    android:textSize="@dimen/font3x" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/etOnRepeat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    android:background="@drawable/square_white"
                                    android:padding="@dimen/image3x"
                                    android:textSize="@dimen/font3x" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/image3x"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/image3x"
                        android:layout_weight="0.9"
                        android:gravity="end"
                        android:text="Summary"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/font3x" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:background="@drawable/square_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:padding="@dimen/image3x"
                            android:text="#"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.5"
                            android:background="@color/colorWhite"
                            android:padding="@dimen/image3x"
                            android:text="Reminder Date &#38; time "
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/font3x" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:alpha="0.7"
                            android:background="@color/colorBlack" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/image2x"
                            android:layout_marginRight="@dimen/image2x"
                            android:layout_weight="0.8"
                            android:background="@drawable/ripple_button_orange"
                            android:gravity="center"
                            android:padding="@dimen/image3x"
                            android:text="Delete"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/font3x" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_overlay" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x">

                    <TextView
                        android:id="@+id/tvCancelRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/image3x"
                        android:layout_toLeftOf="@+id/tvDone"
                        android:background="@drawable/ripple_button_maroon"
                        android:paddingBottom="@dimen/image3x"
                        android:paddingLeft="@dimen/image7x"
                        android:paddingRight="@dimen/image7x"
                        android:paddingTop="@dimen/image3x"
                        android:text="@string/Camera_Cancel"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font3x" />

                    <TextView
                        android:id="@+id/tvDoneRepeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/image3x"
                        android:background="@drawable/ripple_button_blue"
                        android:paddingBottom="@dimen/image3x"
                        android:paddingLeft="@dimen/image7x"
                        android:paddingRight="@dimen/image7x"
                        android:paddingTop="@dimen/image3x"
                        android:text="Done"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/font3x" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>