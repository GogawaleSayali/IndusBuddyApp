<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/image3x"
        android:layout_margin="@dimen/image2x"
        app:cardCornerRadius="@dimen/image3x"
        android:elevation="@dimen/image3x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/image5x"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Reminder : short description about reminder."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/font4x" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/image3x"
                android:text="Date Time"
                android:alpha="0.7"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/font4x" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/image3x"
                android:text=":"
                android:alpha="0.7"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/font4x" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/image3x"
                android:text=" - "
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/font4x" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/image3x"
                    android:text="Category"
                    android:alpha="0.7"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x"
                    android:text=":"
                    android:alpha="0.7"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/image3x"
                    android:text=" - "
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x"
                    android:text="Reminder for me"
                    android:alpha="0.7"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x"
                    android:text=":"
                    android:alpha="0.7"
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />

                <TextView
                    android:id="@+id/tvRemForMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image3x"
                    android:text=" - "
                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/font4x" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.5"
                android:background="@color/colorgrey" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
