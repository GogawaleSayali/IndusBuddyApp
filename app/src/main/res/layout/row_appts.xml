<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/image4x"
    android:layout_margin="@dimen/image3x"
    android:elevation="@dimen/image3x"
    app:cardCornerRadius="@dimen/image3x">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvAppt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font5x"
            android:textColor="@color/colorText"
            android:text="Appt name is here"
            android:padding="@dimen/image4x"
            android:alpha="0.7"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtvDescription"
            android:background="@color/colorWhitegreySemi"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Appt On"
                    android:gravity="center"
                    android:alpha="0.5"
                    android:background="@color/colorWhitegreySemi"
                    android:padding="@dimen/image3x"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font3x" />
                <TextView
                    android:id="@+id/tvApptOn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="date"
                    android:gravity="center"
                    android:alpha="0.8"
                    android:padding="@dimen/image3x"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font3x" />
            </LinearLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorText"
                android:alpha="0.5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Status"
                    android:gravity="center"
                    android:alpha="0.5"
                    android:background="@color/colorWhitegreySemi"
                    android:padding="@dimen/image3x"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font3x" />
                <TextView
                    android:id="@+id/tvApptStatus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="status"
                    android:padding="@dimen/image3x"
                    android:gravity="center"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/font3x" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textStyle="italic"
            android:padding="@dimen/image3x"
            android:textSize="@dimen/font4x"
            android:textColor="@color/colorBlue"
            android:gravity="end"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>