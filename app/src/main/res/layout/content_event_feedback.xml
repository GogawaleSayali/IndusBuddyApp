<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.wellness.EventFeedbackActivity"
    tools:showIn="@layout/activity_event_feedback">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlUpper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square"
        android:padding="@dimen/image10x"
        android:layout_margin="@dimen/image4x">


        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image25x"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image2x"
            android:numStars="5"
            android:progress="100"
            android:stepSize="1"
            android:theme="@style/customRatingBar" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment*"
            android:layout_below="@+id/ratingbar"
            android:layout_margin="@dimen/image2x"
            android:background="@drawable/gradient_square_faint_maroon"
            android:padding="@dimen/image15x"/>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llVideoUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlUpper"
        android:hint="Good Service"
        android:orientation="vertical"
        android:padding="@dimen/image3x">

        <TextView
            android:id="@+id/tvVideoUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/image4x"
            android:layout_marginLeft="@dimen/image30x"
            android:layout_marginRight="@dimen/image30x"
            android:background="@drawable/ripple_button_green"
            android:gravity="center"
            android:padding="@dimen/image4x"
            android:text="Save"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font5x" />

    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
