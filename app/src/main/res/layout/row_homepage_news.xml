<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/image3x"
            android:text="title"
            android:textColor="@color/colorText"
            android:textSize="@dimen/font3x"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:background="@color/black_overlay"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="domain"
            android:gravity="start"
            android:paddingLeft="@dimen/image3x"
            android:textColor="@color/colorAmericanBlueDarkFaint"
            android:textSize="@dimen/font2x" />
        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="month - year"
            android:gravity="end"
            android:paddingRight="@dimen/image3x"
            android:paddingLeft="@dimen/image3x"
            android:alpha="1"
            android:layout_alignParentRight="true"
            android:background="@color/colorBlue"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font2x" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/package_three"
            android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="--"
                android:textSize="@dimen/font5x"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:paddingTop="@dimen/image3x"
            android:paddingLeft="@dimen/image3x"
            android:paddingRight="@dimen/image3x"
            android:textColor="@color/colorText"
            android:textSize="@dimen/font3x"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvSources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/font2x"
            android:text="@string/sources"
            android:padding="@dimen/image3x"
            android:paddingBottom="@dimen/image3x"
            android:textColor="@color/colorBlue"/>
        <TextView
            android:id="@+id/tvReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/font2x"
            android:text="@string/readMore"
            android:textStyle="italic"
            android:alpha="0.700"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/image3x"
            android:paddingBottom="@dimen/image3x"
            android:textColor="@color/colorBlue"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/image3x"
            android:alpha="0.2"
            android:background="@color/black_overlay"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>