            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image4x">

            <RelativeLayout
                android:id="@+id/rlImag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_backdrop_height">

                <ImageView
                    android:id="@+id/package_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_backdrop_height"
                    android:layout_alignParentTop="true"
                    android:paddingTop="@dimen/image2x"
                    android:scaleType="centerCrop"
                    android:src="@drawable/package_five" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#50000000"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loutdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlImag"
                android:background="@drawable/square_semi_brown"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_package_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/image4x"
                    android:text="@string/package_name"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font4x"
                    android:layout_alignParentBottom="true"
                    android:textStyle="normal" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:alpha="0.5"
                    android:layout_marginLeft="@dimen/image10x"
                    android:layout_marginRight="@dimen/image10x"
                    android:background="@color/colorOrange"/>

